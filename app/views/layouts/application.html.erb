<!DOCTYPE html>
<html>
  <head>
    <title>Racoon3</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  <div class="container-fluid">

    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #228B22;">
      <a class="navbar-brand" href="/"><img src="/images/forlogo.jpg" width="100px" height="100px"></a>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">

        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to 'Перезвонить мне', phonecallbacks_path, class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to 'Контакты', contacts_path, class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to 'Доставка и оплата', deliverys_path, class: "nav-link" %>
          </li>
        </ul>



      </div>

    </nav>

  </div>

    <div class="row">
      <div class="col-lg-2">


        <div class="navbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to 'ПК категория', {:controller => :products,:action => :index, 'q[category_id_in]': (Category.find(5).self_and_descendants.collect(&:id)) } %>
            </li>
            <li class="nav-item">
              <%= link_to 'Cpu категория до 800грн', {:controller => :products,:action => :index, 'q[category_id_in]': (Category.find(7).self_and_descendants.collect(&:id)), 'q[price_lteq]': 800 } %>
            </li>
            <li class="nav-item">
              <%= link_to 'Cpu категория', {:controller => :products,:action => :index, 'q[category_id_in]': (Category.find(7).self_and_descendants.collect(&:id)) } %>
            </li>
            <li class="nav-item">
              <%= link_to 'Cpu_Amd категория', {:controller => :products,:action => :index, 'q[category_id_in]': 7, 'q[company_matches]': 'amd' } %>
            </li>
            <li class="nav-item">
              <%= link_to 'Продукты', products_path %>
            </li>
            <li class="nav-item">
              <%= link_to 'Cpu раздел', {:controller => :cpus,:action => :index } %>
            </li>
          </ul>
        </div>


    </div>

    <div class="col-lg-9">
      <% flash.each do |type, msg| %>
        <div>
          <%= msg %>
        </div>
      <% end %>
     <%= yield %>

    </div>

    </div>

  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </body>
</html>
